{
  "name": "compressly",
  "version": "1.1.5",
  "description": "Electron app to compress videos, images & audio",
  "main": "src/main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "private": true,
  "author": "Minimack Studios",
  "license": "MIT",
  "devDependencies": {
    "electron": "^26.0.0",
    "electron-builder": "^24.0.0"
  },
  "dependencies": {
    "ffmpeg-static": "^5.0.0",
    "fluent-ffmpeg": "^2.1.2",
    "sharp": "^0.32.4",
    "electron-store": "^8.1.0",
    "file-type": "^18.0.0"
  }
  ,
  "build": {
    "productName": "Compressly",
    "appId": "com.compressly.app",
    "files": [
      "**/*"
    ],
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": ["nsis"],
      "icon": "src/compressly.ico",
      "extraResources": [
        {
          "from": "build/ffmpeg/win32",
          "to": "ffmpeg/win32",
          "filter": ["**/*"]
        }
      ]
    },
    "mac": {
      "icon": "src/compressly.icns",
      "target": [
        { "target": "dmg", "arch": ["x64"] }
      ],
      "extraResources": [
        {
          "from": "build/ffmpeg/darwin",
          "to": "ffmpeg/darwin",
          "filter": ["**/*"]
        }
      ]
    },
    
    "dmg": {
      "icon": null
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true
    }
  }
}
